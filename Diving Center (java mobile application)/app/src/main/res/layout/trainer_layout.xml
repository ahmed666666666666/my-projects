<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:paddingStart="@dimen/_10sdp"
        android:layout_width="match_parent"
        android:layout_height= "@dimen/_100sdp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/diving"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/t_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="trainer name"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:layout_marginLeft="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_4sdp"
            />
        <TextView
            android:id="@+id/t_level_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:text="level"
            android:textColor="@color/white"
            android:textStyle="italic"
            android:layout_below="@id/t_name_text"
            android:layout_marginLeft="@dimen/_16sdp"
            android:layout_centerVertical="true"
            />
        <TextView
        android:id="@+id/t_age_text"
        android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
        android:layout_height="wrap_content"
            android:layout_below="@id/t_level_text"
            android:textColor="@color/white"
            android:text="age"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/_16sdp"
    />

        <TextView
            android:id="@+id/t_years_text"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/t_age_text"
            android:textColor="@color/white"
            android:layout_below="@id/t_level_text"
            android:text="Years Old"
            android:textStyle="italic"
            android:layout_marginLeft="@dimen/_8sdp"
            />
        <Button
            android:id="@+id/accepttt"
            android:background="#228B22"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/_8sdp"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:text="accept"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/accepttt"
            android:layout_marginRight="@dimen/_8sdp"

            android:layout_alignParentEnd="true"
            android:background="#EA4335"
            android:text="reject"
            android:textColor="#fff" />
        <TextView
            android:text="status"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/status"
            android:text="status"
            android:layout_marginLeft="@dimen/_16sdp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_height="wrap_content"
            android:layout_below="@id/t_age_text"
            />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>